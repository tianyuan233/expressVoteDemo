extends ../base.pug

block content
  div 
    if info
      h2.info #{info}  
  form(action="/register" method="post")
    div
      input(
        type="text"
        name="username"
        placeholder="用户名"
        )
    div
      input(
        type="text"
        name="email"
        placeholder="邮箱"
        )
    div
      input(
        type="password"
        name="password"
        placeholder="密码"
        )
    button(type="submit") register
    |
    |
    a(href="/login") login